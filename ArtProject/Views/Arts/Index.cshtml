@model IEnumerable<ArtProject.Models.Art>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center" style="margin-top: 40px !important;">Index</h1>

<p class="text-center">
    <a class="text-decoration-none underline" asp-action="Create">Create New</a> | <a class="text-decoration-none underline" asp-action="Gallery">See Gallery</a>
</p>
<form class="text-center" asp-controller="Arts" asp-action="Index" method="get">
    <p>
        Key Word: <input type="text" name="SearchString" />
        <input class="btn btn-outline-dark" type="submit" value="Filter" />
    </p>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Technique)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Technique)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movement)
            </td>
            <td>
                <a class="text-decoration-none underline" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="text-decoration-none underline" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="text-decoration-none underline" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
