@model ArtProject.Models.Art

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-uppercase text-center" style="margin: 40px !important;">Delete Painting</h1>
<h4 class="text-center" style="margin-bottom: 30px !important">Are you sure you want to delete @Html.DisplayFor(model => model.Title) by <i>@Html.DisplayFor(model => model.Artist)</i>?</h4>

<img class="img-fluid shadow p-3 mb-5 bg-white" src="@("~/images/"+Model.ImageName)" asp-append-version="true"/>
<div class="text-center" style="margin: 30px !important;">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this painting?');" /> |
        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
